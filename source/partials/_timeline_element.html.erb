<div class="content-<%= direction %>-container">
  <div class="content-<%= direction %>">
    <h3><%= title %></h3>

    <!-- image -->
    <% if image %>
      <a class="gallery"
         href="<%= url_for "images/content/large/#{image}" %>"
         title="<%= image_caption %><br/><%= image_attr %>">
        <%= image_tag "images/content/small/#{image}", class: "preview" %>
      </a>
    <% end %>

    <!-- more info -->
    <p><a data-toggle="collapse" href="#<%= id %>" role="button"
       aria-expanded="false" aria-controls="<%= id %>">
        Learn More
    </a></p>

    <!-- contents -->
    <div class="collapse" id="<%= id %>">
      <div class="card card-body">
        <%= yield %>
      </div>
    </div>
  </div>
</div>
