<div class="content-container content-<%= direction %>-container">
  <div class="event content-<%= direction %>">
 
    <h3>
      <%= title %>
    </h3>

    <% if image.present? %>
      <div class="timeline-image">
        <a class="gallery"
          href="<%= url_for "images/content/large/#{image}" %>"
          title="<%= image_caption %><br/><%= image_attr %>">
          <%= image_tag "images/content/small/#{image}", class: "preview" %>
          <span class="timeline-imagecaption">View larger image</span>
        </a>
      </div>
    <% end %>

    <!-- more info -->
    <button data-toggle="collapse"
        href="#<%= id %>"
        role="button"
        aria-expanded="false"
        aria-controls="<%= id %>"
        class=" timeline-collapse">
      Learn More
    </button>

    <!-- contents -->
    <div class="collapse" id="<%= id %>">
      <div class="card card-body">

        <button data-toggle="collapse"
          href="#<%= id %>"
          role="button"
          aria-expanded="false"
          aria-controls="<%= id %>"
          class="btn btn-secondary">
          X
        </button>

        <%= yield %>

        <% if image.present? %>
          <div class="image_attribution">
            Image: <%= image_attr %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
